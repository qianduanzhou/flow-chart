{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/types/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "declaration": true,
        "lib": ["esnext", "dom"],
        "paths": {
            "@": ["src/*"],
            "core/*": ["src/core/*"],
        }
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
}